{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "noResolve": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "outDir": "./dist/"
    },
    "compileOnSave": false,
    "include": [
        "typings/**/*.d.ts",
        "kernel**/*.ts"
    ]
}
