{
    "compilerOptions": {
        "module": "system",
        "target": "es6",
        "removeComments": true,
        "noResolve": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "outFile": "./dist/kernel.ts"
    },
    "compileOnSave": false,
    "include": [
        "typings/**/*.d.ts",
        "kernel**/*.ts"
    ]
}
